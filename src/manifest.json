{
  "manifest_version": 3,
  "name": "Tabs Rotator / Slideshow",
  "short_name": "Tabs Rotator",
  "version": "1.1",
  "description": "Rotate through a set of URLs at specified intervals.",
  "permissions": ["tabs", "storage", "activeTab", "webNavigation", "scripting"],
  "host_permissions": [
        "*://*/*"
    ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "assets/icons/change-exchange-icon16.png",
    "48": "assets/icons/change-exchange-icon48.png",
    "128": "assets/icons/change-exchange-icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/change-exchange-icon16.png",
        "assets/icons/change-exchange-icon48.png",
        "assets/icons/change-exchange-icon128.png",
        "assets/icons/change-exchange-red-icon16.png",
        "assets/icons/change-exchange-red-icon48.png",
        "assets/icons/change-exchange-red-icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
